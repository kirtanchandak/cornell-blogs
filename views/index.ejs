<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include('../partials/header.ejs') %>
    <div class="blogs content">
      <h2>All blogs</h2>
      <% if(blogs.length > 0) { %> <% blogs.forEach((blog) => { %>
      <h3><%= blog.title %></h3>
      <p><%= blog.snippet %></p>
      <% }) %> <% } else { %>
      <p>No Blogs to display!</p>
      <% } %>
    </div>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
